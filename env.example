# PitCrew Labs Sales Co-Pilot Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://pitcrew:pitcrew_password@localhost:5432/pitcrew_labs
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

ENCRYPTION_KEY=your_encryption_key_here
SECRET_KEY=your_secret_key_here

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=PitCrew Labs Sales Co-Pilot
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# ===========================================
# Feature Flags
# ===========================================
ENABLE_RAG_FEATURES=true
ENABLE_CROSS_TENANT_SHARING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_MONITORING=true

# ===========================================
# API Configuration
# ===========================================
API_V1_STR=/api/v1
PROJECT_NAME=PitCrew Labs Sales Co-Pilot Platform
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# ===========================================
# Email Configuration
# ===========================================
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=noreply@pitcrew-labs.com
EMAILS_FROM_NAME=PitCrew Labs

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,docx,txt,md,csv
UPLOAD_DIRECTORY=uploads/

# ===========================================
# Quota Configuration
# ===========================================
DEFAULT_MAX_CONTEXT_ITEMS=1000
DEFAULT_MAX_GLOBAL_ACCESS_FEATURES=50
DEFAULT_MAX_SHARING_REQUESTS=100

# ===========================================
# Monitoring & Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# External Services
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ===========================================
# Development Configuration
# ===========================================
# Uncomment for development
# DEBUG=true
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
